---
import { Image } from "astro:assets";
import logo from "../images/logo_razar.png";
---

<div
  x-data="{ open: false }"
  class="w-full main-container bg-primary flex items-center justify-between h-[70px] py-2 sticky top-0 z-50 shadow-lg transition-shadow duration-300"
>
  <!-- Logo Section -->
  <div class="flex items-center gap-2">
    <Image
      src={logo}
      alt="logo image"
      class="w-[40px] h-[40px] md:w-[70px] md:h-[70px] drop-shadow-lg"
      width={70}
      height={70}
    />
  </div>

  <!-- Desktop Navigation -->
  <nav class="hidden md:block">
    <ul class="flex gap-8 text-xl font-heading text-text">
      <li>
        <a
          href="/"
          class="relative hover:text-highlight transition-all hover:shadow-highlight"
        >
          Home
        </a>
      </li>
      <li>
        <a
          href="/players"
          class="relative hover:text-highlight transition-all hover:shadow-highlight"
        >
          Players
        </a>
      </li>
      <li>
        <a
          href="/heroes"
          class="relative hover:text-highlight transition-all hover:shadow-highlight"
        >
          Heroes
        </a>
      </li>
      <li>
        <a
          href="/schedule"
          class="relative hover:text-highlight transition-all hover:shadow-highlight"
        >
          Schedule
        </a>
      </li>
    </ul>
  </nav>

  <!-- Mobile Menu Button -->
  <button
    @click="open = !open"
    class="block md:hidden p-2 text-highlight focus:outline-none focus:ring-2 focus:ring-highlight rounded-lg hover:shadow-glow transition-transform duration-200"
    aria-label="Open Menu"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      class="w-6 h-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M4 6h16M4 12h16m-7 6h7"></path>
    </svg>
  </button>

  <!-- Mobile Navigation -->
  <div
    x-show="open"
    class="fixed top-0 right-0 w-full h-full bg-background z-50 flex md:hidden transform transition-transform duration-500 ease-in-out"
  >
    <div class="w-full h-full flex flex-col items-start">
      <div class="w-full flex items-center justify-between py-[8px] px-[20px]">
        <Image
          src={logo}
          alt="logo image"
          class="w-[40px] h-[40px] md:w-[70px] md:h-[70px] drop-shadow-lg"
          width={70}
          height={70}
        />
        <button
          @click="open = false"
          class="p-2 text-highlight focus:outline-none focus:ring-2 focus:ring-highlight rounded-lg hover:shadow-glow transition-transform duration-200"
          aria-label="Close Menu"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <ul class="flex flex-col gap-4 text-xl font-heading text-text p-[20px]">
        <li>
          <a
            href="/"
            class="hover:text-highlight transition-all hover:shadow-highlight"
            >Home</a
          >
        </li>
        <li>
          <a
            href="/players"
            class="hover:text-highlight transition-all hover:shadow-highlight"
            >Players</a
          >
        </li>
        <li>
          <a
            href="/heroes"
            class="hover:text-highlight transition-all hover:shadow-highlight"
            >Heroes</a
          >
        </li>
        <li>
          <a
            href="/schedule"
            class="hover:text-highlight transition-all hover:shadow-highlight"
            >Schedule</a
          >
        </li>
      </ul>
    </div>
  </div>
</div>

<style>
  :global(body) {
    overflow-x: hidden;
  }

  .hover\:shadow-highlight:hover {
    text-shadow: 0px 4px 6px var(--highlight);
  }

  .hover\:shadow-glow:hover {
    box-shadow: 0 0 15px var(--highlight);
  }

  .drop-shadow-lg {
    filter: drop-shadow(0px 10px 10px rgba(0, 0, 0, 0.3));
  }

  .transition-shadow {
    transition: box-shadow 0.3s ease-in-out;
  }
</style>
