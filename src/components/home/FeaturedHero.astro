---
import { Image } from "astro:assets";
import FontHeading from "../FontHeading.astro";
---

<section class="py-[50px] bg-gray-900">
  <div class="main-container">
    <FontHeading label="Featured Heroes" />
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {
        [
          {
            name: "Shadow Ninja",
            role: "Assassin",
            image: "https://via.placeholder.com/150",
          },
          {
            name: "Dragon Knight",
            role: "Fighter",
            image: "https://via.placeholder.com/150",
          },
          {
            name: "Magic Healer",
            role: "Support",
            image: "https://via.placeholder.com/150",
          },
          {
            name: "Ice Archer",
            role: "Marksman",
            image: "https://via.placeholder.com/150",
          },
        ].map((hero, index) => (
          <div class="bg-gray-800 p-4 rounded-lg shadow-md text-center flex flex-col gap-[10px]">
            <Image
              src={hero.image}
              alt={hero.name}
              class="w-24 h-24 mx-auto rounded-full"
              width={300}
              height={300}
            />
            <h3 class="text-lg font-semibold">{hero.name}</h3>
            <p class="text-gray-400 text-sm">{hero.role}</p>
            <a
              href="#"
              class=" text-highlight text-sm font-semibold hover:underline"
            >
              View Details â†’
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
