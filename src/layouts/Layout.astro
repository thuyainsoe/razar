---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const {
  title = "Razar - Your Ultimate Guide",
  metaUrl = "https://dailytopics.info/",
  metaImage = "https://dailytopics.info/images/logo_d.png",
  description = "Dive into a world of eSports, football, IT, and more with exclusive player insights, expert guides, and real-time updates. Stay informed, stay ahead!",
  keywords = "Player Insights, Game Strategies, Tech Trends, eSports News, Football Insights, IT News, Expert Game Guides, Real-Time Updates, eSports Tips, Football News, IT Trends 2024, Latest eSports Updates, Gaming Insights, Expert Player Guides, Latest Tech News, Game Strategies for Pro Players, eSports Analysis, Football Analysis, Online Game Strategies, Digital Trends in Gaming, Pro Player Tips, Competitive Gaming Tips",
  updatedTime = new Date().toISOString(),
} = Astro.props;

const fbAppId = "898096579195691";

const ldJson = {
  "@context": "https://schema.org",
  "@type": "Article",
  headline: title,
  description: description,
  url: metaUrl,
  image: metaImage,
  datePublished: "2024-12-11T06:17:59+00:00",
  dateModified: "2024-12-16T10:47:49+00:00",
  author: {
    "@type": "Person",
    name: "Ryan",
  },
  publisher: {
    "@type": "Organization",
    name: "Razar",
    logo: {
      "@type": "ImageObject",
      url: "https://dailytopics.info/images/logo_d.png",
    },
  },
};

interface Props {
  title?: string;
  metaUrl?: string;
  metaImage?: string;
  description?: string;
  keywords?: string;
  updatedTime?: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- SEO Metadata -->
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Razar Team" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href="/favicon.ico" />
    <link rel="canonical" href={metaUrl} />
    <meta property="og:updated_time" content={updatedTime} />

    <!-- Open Graph (OG) / Facebook -->
    <meta property="og:title" content={title} />
    <meta property="fb:app_id" content={fbAppId} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={metaUrl} />
    <meta property="og:image" content={metaImage} />
    <meta property="og:site_name" content="Razar" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="article" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content={metaImage} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://dailytopics.info/images/hero_bg.webp"
    />
    <meta name="twitter:site" content="@your_twitter_handle" />
    <meta name="twitter:creator" content="@your_twitter_handle" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo_d.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    {
      ldJson && (
        <script type="application/ld+json" set:html={JSON.stringify(ldJson)} />
      )
    }

    <script
      is:inline
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3664492410298374"
      crossorigin="anonymous"></script>

    <script
      is:inline
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
    ></script>

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
    ></script>

    <script>
      window.onload = function () {
        console.log("Page load time: " + performance.now() + "ms");
      };
    </script>
  </head>

  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    font-family: "Source Serif Pro", Georgia, Cambria, "Times New Roman", Times,
      serif;
    @apply bg-background text-text;
  }

  .main-container {
    @apply px-[20px] lg:px-[10%];
  }

  .blog-content p,
  .blog-content li {
    line-height: 180%;
    font-family: "Source Serif Pro", Georgia, Cambria, "Times New Roman", Times,
      serif;
    /* @apply font-sans; */
  }

  .blog-content h2 {
    margin: 30px 0px 10px 0px;
    font-size: 1.8rem;
    line-height: 130%;
    font-weight: bolder;
    font-family: "Source Serif Pro", Georgia, Cambria, "Times New Roman", Times,
      serif;
  }
</style>
